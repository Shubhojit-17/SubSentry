# SubSentry Environment Configuration

# Database (Docker PostgreSQL)
DATABASE_URL="postgresql://postgres:password@localhost:5432/subsentry?schema=public"

# NextAuth
NEXTAUTH_SECRET="your-super-secret-key-change-in-production"
NEXTAUTH_URL="http://localhost:3000"

# LLM Provider (gemini | openai | anthropic)
LLM_PROVIDER="gemini"
GEMINI_API_KEY=""
OPENAI_API_KEY=""
ANTHROPIC_API_KEY=""

# Google OAuth (Gmail) - PRIMARY
# Create credentials at https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GOOGLE_REDIRECT_URI="http://localhost:3000/api/auth/callback/google"

# Gmail API Scopes (auto-configured, do not modify)
GMAIL_SCOPES="https://www.googleapis.com/auth/gmail.readonly https://www.googleapis.com/auth/gmail.send"

# Email SMTP (Fallback only - optional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM="noreply@subsentry.com"
